<div class="row mt-3">
  <div class="col-md-3 text-center">
    <img src="{{this.image}}" alt="" class="show-image rounded" />
    <h4 class="mt-3 text-danger">Miễn Phí</h4>
    <div class="mt-3">
      <div class="mt-2"><i class="fas fa-film"></i> Tổng 127 bài học</div>
      <div class="mt-2"><i class="fas fa-clock"></i> Thời lượng 32 giờ 45 phút</div>
      <div class="mt-2"><i class="fas fa-map-marker-alt"></i> Học mọi lúc mọi nơi</div>
    </div>
     <button class="btn btn-primary mt-3">Học ngay
      <i class="fas fa-check"></i></button>
  </div>
  <div class="col-md-9">
    <iframe
      height="547"
      src="https://www.youtube.com/embed/{{this.videoId}}"
      title="YouTube video player"
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen
      class="rounded"
    ></iframe>
    <h3 class="mt-3">{{this.name}}</h3>
    <hr class="dropdown-divider" />
    <p>{{this.description}}</p>
  </div>
</div>
