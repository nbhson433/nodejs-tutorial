<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card mt-3 shadow-sm p-3">
      <form
        class="mt-3"
        method="POST"
        action="/courses/update/{{this._id}}?_method=PUT"
      >
        <h3>Chỉnh sửa khóa học</h3>
        <hr class="dropdown-divider" />
        <div class="mb-3">
          <label for="name" class="form-label">Tên khóa học</label>
          <input
            type="text"
            class="form-control"
            value="{{this.name}}"
            name="name"
            autocomplete="off"
          />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Mô tả</label>
          <textarea
            class="form-control"
            name="description"
            autocomplete="off"
          >{{this.description}}</textarea>
        </div>
        <div class="mb-3">
          <label for="videoId" class="form-label">Video ID</label>
          <input
            class="form-control"
            value="{{this.videoId}}"
            name="videoId"
            autocomplete="off"
          />
        </div>
       <div class="row">
          <div class="col-lg-12 d-flex justify-content-end">
            <a href="/me/stored/courses" class="btn btn-outline-secondary" style="margin-right: 12px;">Khóa học của tôi</a>
            <button type="submit" class="btn btn-primary">Sửa <i class="fas fa-edit"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>